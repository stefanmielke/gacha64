{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Rom",
            "command": "./build.sh",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run cen64",
            "type": "shell",
            "command": "${N64DevKit}/cen64 -debug localhost:8080 -flash ${N64DevKit}/eep4k.bin ${N64DevKit}/pifdata.bin ${workspaceFolder}/undercontrol.z64",
            "group": "build",
            "dependsOn": "Make Rom",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "Run cen64 delay",
            "type": "shell",
            "command": "sleep 0.5",
            "group": "build",
            "dependsOn": "Run cen64",
        }
    ]
}